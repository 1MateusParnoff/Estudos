import java.sql.SQLOutput;
import java.util.Scanner;

public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Digite o dia da semana? ");
        String diga = sc.nextLine().toUpperCase();

        if (diga.equals("DOMINGO")) {
                System.out.println(diga + " não é um dia útil");
        } else if (diga.equals("SABADO")) {
                System.out.println(diga + " não é um dia útil");
        } else {
                System.out.println(diga + " é um dia útil");
        }
}

