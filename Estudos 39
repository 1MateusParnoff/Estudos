import java.util.Scanner;

public static void main(String[] args) {
    Scanner sc = new Scanner(System.in);
    System.out.println("Digite o número de um dia: \n 1 = Domingo / 2 = Segunda \n 3 = Terça / 4 = Quarta \n 5 = Quinta / 6 = Sexta \n 7 = Sábado");
    int dia = sc.nextInt();
    String nomeDia;

    switch (dia) {
        case 1:
            nomeDia = "domingo";
            break;
        case 2:
            nomeDia = "segunda-feira";
            break;
        case 3:
            nomeDia = "terça-feira";
            break;
        case 4:
            nomeDia = "quarta-feira";
            break;
        case 5:
            nomeDia = "quinta-feira";
            break;
        case 6:
            nomeDia = "sexta-feira";
            break;
        case 7:
            nomeDia = "sábado";
            break;
        default:
            nomeDia = "dia inválido";
            break;
    }

    System.out.println("O dia " + dia + " é " + nomeDia);
}
