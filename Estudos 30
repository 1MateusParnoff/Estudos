

public static void main(String[] args) {
        String tarefa = "Enviar relatório semanal";

        LocalTime horarioAtual = LocalTime.now();
        LocalDate timeAtual = LocalDate.now();

        DateTimeFormatter formato = DateTimeFormatter.ofPattern("dd/MM/yyyy");
        DateTimeFormatter formatoHR = DateTimeFormatter.ofPattern("HH:mm:ss");

        System.out.println("O dia atual é " + timeAtual.format(formato));
        System.out.println("A hora atual é " + horarioAtual.format(formatoHR));
        
}

